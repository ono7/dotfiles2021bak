global !p

def fmt_desc(s1):
    if '/' in s1:
        s1 = s1.split('/')[1]
    return s1.strip()

def fmt_link(s1):
    if '/' in s1:
        l, r = s1.strip().split('/')
        l = l.strip().replace(' ', '_')
        r = r.strip().replace(' ', '_')
        return l + '/' + r
    else:
        return fmt_desc(s1).replace(' ', '_')

def clean_headers(s):
    return re.sub(r'#|=', '',s).strip()

endglobal

